{
  "name": "cc-balance-to-monzo-pot-automation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "node -e \"if(process.env.CI)process.exit(0)\" || husky",
    "functions:build": "cd functions && npm ci && npm run build",
    "functions:watch": "cd functions && npm run watch",
    "functions:serve": "cd functions && npm run serve",
    "functions:deploy": "firebase deploy --only functions",
    "functions:logs": "firebase functions:log",
    "deploy:all": "npm run build && npm run functions:build && firebase deploy --only functions"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "firebase": "^12.3.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{test,spec}.{js,jsx,ts,tsx}": [
      "jest --bail --findRelatedTests"
    ]
  }
}
