{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Functions for CC Balance to Monzo Pot Automation",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  },
  "private": true
}
